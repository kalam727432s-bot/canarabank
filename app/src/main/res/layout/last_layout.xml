<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <LinearLayout
                android:background="@color/primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:paddingEnd="15dp">

                <ImageView
                    android:id="@+id/headerImage"
                    android:layout_marginStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="start"
                    android:layout_marginVertical="10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/head"
                    android:contentDescription="Mark Logo" />
            </LinearLayout>

            <Button
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/primary1"
                android:background="@drawable/rounded_button"
                android:text="Pending!"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textColor="@color/white" />

            <ImageView
                android:layout_marginStart="5dp"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/kyc"
                android:contentDescription="Mark Logo" />


            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:text="Thanks for sharing your details! Our Canara Bank agent will get back to you within 24 hours"/>

            <Button
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button"
                android:text="CLOSE"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textColor="@color/white" />



        </LinearLayout>
    </ScrollView>

    <!-- Fixed Footer -->
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/primary"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disclaimer | Privacy Policy"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView

            android:layout_marginVertical="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2024, Canara Bank, All rights reserved"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>
